<div class="my-container">

  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.dineout.co.in/blog/wp-content/uploads/2016/12/Mumbai-blog-banner-1400x400px.jpg');>
    <div class="banner-content"> <h2 class="text-center">All my fancy cocktails listed!!!</h2>
    </div>
  </div>
  <div class="card-container">
    <div class="row">
      <% @cocktails.each do |cocktail|%>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://i1.wp.com/www.foodrepublic.com/wp-content/uploads/2011/04/oldfashioned.jpg?');">
            <div class="card-description">
              <h2><%= cocktail.name %></h2>

            </div>
            <div class="details-link">
              <%= link_to "See Recipe", cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
